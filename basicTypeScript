function sumar(opt1: number, opt2: number): number{
  return opt1 + opt2;
}
let sum1:number=sumar(opt1,opt2);
console.log(`La suma es ${sum1}`);

let sun:number=sumar(19,5);
console.log(`La suma es ${sun}`);
